<html ng-app = "app.todos">
    <head>
        <title>Node-todo App</title>

        <!--link CDN styles-->
        <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/css/xeditable.min.css">

        <!--load css app style-->
        <link rel="stylesheet" href="assets/css/style.css">

        <!--load CDN scripts (dung de khoi tao cac object, controller, views)--> 
        <script src = "//ajax.googleapis.com/ajax/libs/angularjs/1.8.0/angular.min.js"></script> 
        <script src = "//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/js/xeditable.min.js"></script>
        <script src = "//kit.fontawesome.com/7837a15570.js" crossorigin="anonymous"></script>

        <!--load app-->
        <script src = "assets/js/main/app.js"></script>
        <script src = "assets/js/main/services/svTodos.js"></script> 
    </head>

    <body ng-controller = "todosController">
        <div class = "container">

            <div class="jumbotron text-center">
                <h1>{{ appName }} <span class = "label label-info">{{ todos.length }}</span></h1>
            </div>

            <!--bang list cac dau viec-->
            <div id = "todo-list" class = "row">
                <div class = "col-sm-10 col-sm-offset-3 text-center">
                    <div class = "container" ng-repeat = "todo in todos">
                        <input type="checkbox" ng-model = "todo.isDone" ng-change="updateTodo(todo)">
                        <a href ng-click = "deleteTodo(todo)"><i class = "fa fa-remove"></i></a>
                        <a href ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class = "fa fa-edit"></i></a>
                        <span ng-class = "{strike: todo.isDone}" editable-text = "todo.text" e-form = "textBtnForm" onaftersave="updateTodo(todo)" >{{ todo.text }}</span>    
                    </div>
                    <p class = "text-center" ng-show = "loading">
                        <i class="fas fa-spinner"></i>
                    </p>
                </div>
            </div>

            <!--bang form nhap dau viec-->
            <div id = "todo-form"class = "row">
                <div class = "col-sm-10 col-sm-offset-2 text-center">
                    <form>
                        <div class = "form-group">
                            <input type="text" ng-model = "formData.text" class = "form-control input-lg text-center" placeholder = "What do you want to do">
                        </div>

                        <button type="submit" class = "btn btn-primary btn-lg" ng-disabled = "!formData.text" ng-click = "createToDo()">Add Task</button>
                    </form>
                </div>
            </div>


        </div>
    </body>
</html>